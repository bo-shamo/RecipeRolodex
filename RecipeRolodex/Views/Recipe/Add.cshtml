<form method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" />

    <label for="description">Short Description:</label>
    <input type="text" name="description" />

    <label for="type">Type of Dish:</label>
    <input type="text" name="type" />

    <label for="totaltime">Total Time of Complete:</label>
    <input type="number" name="totaltime" />
    <label for="serve">Serve:</label>
    <input type="number" name="serve" />

    <label for="ingredients">Ingredients (Please separate with comma):</label>
    <textarea name="ingredients"></textarea>

    <label for="source">Where to Find this Recipe:(bookname/pagenumber/etc...)</label>
    <input type="text" name="source" />

    <input type="submit" value="Enter Recipe" />
</form>

