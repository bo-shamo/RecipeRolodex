@model RecipeRolodex.ViewModels.DetailRecipeViewModel
@{
}

<h1 class="center-block">@Model.Title</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-2">Time to Complete: @Model.Time</div>
        <div class="col-sm-2">Serve: @Model.Serve</div>
        <div class="col-sm-2">Type: @Model.Type</div>
    </div>
</div>
<br />
<div class="row">
    <p>@Model.Description</p>
</div>
    
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Ingredient</th>
        </tr>
    </thead>
    
        @foreach (var ingredient in Model.Ingredients)
        {
            <tr>
                <td scope="col">@ingredient.Name</td>
            </tr>
        }
    
</table>
<br/>
<div class="row">
    <p>Source: @Model.Source</p>
</div>

<a asp-controller="Recipe" asp-action="Index">Go Back to Home</a>


