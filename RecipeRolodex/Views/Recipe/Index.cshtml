@model List<RecipeRolodex.Models.Recipe>
@{
}

<h1>Recipe Storage</h1>

<p><a asp-controller="Recipe" asp-action="Add">Add a Recipe</a></p>

@if (Model.Count == 0)
{
    <p>No Recipes Yet, Add Some!</p>
} 
@if (Model.Count != 0)
{
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Source</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    @foreach (var recipe in Model)
    {
        <tr>
            <td><a asp-controller="Recipe" asp-action="Detail" asp-route-recipeid="@recipe.ID">@recipe.Title</a></td>
            <td>@recipe.Description</td>
            <td>@recipe.Source</td>
            <td><a asp-controller="Recipe" asp-action="Edit" asp-route-recipeId="@recipe.ID" class="btn-outline-primary">Edit</a></td>
        </tr>
    }
</table>
}